{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "HVO.AiCodeReview": "Debug"
    }
  },
  "AzureDevOps": {
    "Organization": "<YOUR_AZURE_DEVOPS_ORG>",
    "PersonalAccessToken": "<YOUR_PAT>",
    "ReviewTagName": "ai-code-review",
    "AddReviewerVote": true,
    "MinReviewIntervalMinutes": 2,
    "CommentAttributionTag": "AiCodeReview",
    "ResolveFixedThreadsOnReReview": true
  },
  "AzureOpenAI": {
    "Endpoint": "<YOUR_AZURE_OPENAI_ENDPOINT>",
    "ApiKey": "<YOUR_AZURE_OPENAI_API_KEY>",
    "DeploymentName": "gpt-4o",
    "MaxParallelReviews": 5
  }
}
